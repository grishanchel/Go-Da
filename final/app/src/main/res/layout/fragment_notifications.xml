<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreensActivity">

    <TextView
        android:id="@+id/textSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="settings" />

    <ImageView
        android:id="@+id/profile_image_btn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textSettings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/edit_profile" />

    <Button
        android:id="@+id/saveAvatarBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/profile_image_btn"
        android:layout_centerHorizontal="true"
        android:text="Сохранить аватарку" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveAvatarBtn"
        android:layout_centerHorizontal="true"
        android:text="Сбросить пароль" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnReset"
        android:layout_centerHorizontal="true"
        android:text="Выйти" />

</RelativeLayout>